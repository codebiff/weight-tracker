<div class="hero-unit" style="background: #4CB1CE">

  <% if !@weights.empty? %>

    <h1>Current loss: <%= weight_loss %> kg</h1>
    <p>You were <strong><%= current_weight %> kg</strong>. So how much do you weight now, fatboy?</p>

  <% else %>

    <h1>First time?</h1>
    <p>Let's get started then, chunk!</p>

  <% end %>

  <form class="form-inline" action="/new" method="post">
    
      <input type="text" class="input-small" placeholder="Weight in Kg" name="kg">
      <button type="submit" class="btn btn-success"><i class="icon-plus icon-white"></i> Add</button>
  
  </form>

</div>


<% if !@weights.empty? %>

  <div class="row">

    <div class="span1">
      <h4><%= start_weight %> kg</h4>
    </div>

    <div class="progress progress-info progress-striped active span10">
      <div class="bar" style="width: <%= weight_loss_progress %>%;"></div>
    </div>

    <div class="span1">
      <h4><%= goal %> kg</h4>
    </div>

  </div>

<% end %>

  <% if ! @weights.empty? %>
    <div class="clearfix">
      <h3>The last 7 days... <a class="btn btn-mini" href="/"><i class="icon-cog"></i> Graph</a></h3>

      <table class="table table-striped">
        
        <thead>
          <tr>
            <th>Date</th>
            <th>Kg</th>
            <th>Lbs</th>
            <th>Stone</th>
            <th>BMI</th>
            <th></th>
          </tr>
        </thead>

        <tbody>

          <% for weight in @weights.reverse %>

            <tr>
              <td><%= tidy_date(weight.created_at) %></td>
              <td><%= weight.kg %> kg</td>
              <td><%= weight.lbs %> lbs</td>
              <td><%= weight.stone %></td>
              <td><%= weight.bmi %>%<span></td>
              <td>
                <a class="btn btn-mini"href="/edit/<%= weight.id %>">Edit</a>
                <a class="delete btn btn-mini btn-danger" data-id="<%= weight.id %>" href="#">Delete</a>
              </td>
            </tr>

          <% end %>
        
        </tbody>

      </table>

      <div class="modal fade" id="deleteModal">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">Ã—</a>
          <h3>Delete entry?</h3>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this entry?</p>
        </div>
        <div class="modal-footer">
          <a href="#" class="btn btn-danger">Delete</a>
          <a href="#" class="btn">Close</a>
        </div>
      </div>

    <% end %>

</div>